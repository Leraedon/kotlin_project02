<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gamboge_yellow_bg"
    android:orientation="vertical"
    android:padding="29dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Lostory"
        android:textSize="36dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:letterSpacing="0.06"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <ImageButton
                android:id="@+id/diary_btn"
                android:background="@drawable/button_gy"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_margin="14dp"
                android:layout_weight="1"
                android:src="@drawable/diary"
                >

            </ImageButton>
            <ImageButton
                android:id="@+id/todo_btn"
                android:background="@drawable/button_gy"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_margin="14dp"
                android:layout_weight="1"
                android:src="@drawable/todo_128"
                >
            </ImageButton>
        </TableRow>
        <TableRow>
            <ImageButton
                android:id="@+id/dday_btn"
                android:background="@drawable/button_gy"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_margin="14dp"
                android:layout_weight="1"
                android:src="@drawable/dday_128"
                >
            </ImageButton>
            <ImageButton
                android:id="@+id/objective_btn"
                android:background="@drawable/button_gy"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_margin="14dp"
                android:layout_weight="1"
                android:src="@drawable/goal_128"
                >
            </ImageButton>
        </TableRow>
        <TableRow>
            <ImageButton
                android:id="@+id/alarm_btn"
                android:background="@drawable/button_gy"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_margin="14dp"
                android:layout_weight="1"
                android:src="@drawable/alarm_128"
                >
            </ImageButton>
            <ImageButton
                android:id="@+id/setting_btn"
                android:background="@drawable/button_gy"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_margin="14dp"
                android:layout_weight="1"
                android:src="@drawable/sett_128"
                >
            </ImageButton>
        </TableRow>

    </TableLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:background="@color/light_gray_bg"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:src="@drawable/user_sample"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:padding="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/profile_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="환영합니다, 홍길동님."
                    android:layout_gravity="center"
                    android:textSize="17dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:padding="7dp">
                    <Button
                        android:id="@+id/mypage_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_lg"
                        android:layout_margin="3dp"
                        android:text="마이페이지"
                        />
                    <Button
                        android:id="@+id/logout_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_lg"
                        android:layout_margin="3dp"
                        android:text="로그아웃"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>